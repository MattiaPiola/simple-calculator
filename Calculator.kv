<ProvaBoxLayout>
    orientation: 'vertical'

    Label:
        id: screen
        text: "0"
        font_size: 100

    BoxLayout:
        id: keyboard_zone
        orientation:'horizontal'

        BoxLayout:
            id: num_keyboard
            orientation: 'vertical'

            BoxLayout:
                id: numrow1
                orientation: 'horizontal'

                Button:
                    text: "1"
                    on_release: root.add_to_string("1","1")
                Button:
                    text: "2"
                    on_release: root.add_to_string("2","2")
                Button:
                    text: "3"
                    on_release: root.add_to_string("3","3")

            BoxLayout:
                id: numrow2
                orientation: 'horizontal'
                Button:
                    text: "4"
                    on_release: root.add_to_string("4","4")
                Button:
                    text: "5"
                    on_release: root.add_to_string("5","5")
                Button:
                    text: "6"
                    on_release: root.add_to_string("6","6")

            BoxLayout:
                id: numrow3
                orientation: 'horizontal'

                Button:
                    text: "7"
                    on_release: root.add_to_string("7","7")
                Button:
                    text: "8"
                    on_release: root.add_to_string("8","8")
                Button:
                    text: "9"
                    on_release: root.add_to_string("9","9")

            BoxLayout:
                id: numrow4
                orientation: 'horizontal'

                Button:
                    text: "AC"
                    on_release: root.clear_strings()
                Button:
                    text: "0"
                    on_release: root.add_to_string("0","0")
                Button:
                    text: "="
                    on_release: root.calculate()

        BoxLayout:
            id: ops_keyboard
            orientation: 'horizontal'

            BoxLayout:
                id: opscol1
                orientation: 'vertical'

                Button:
                    text: "+"
                    on_release: root.add_to_string("+","+")
                Button:
                    text: "-"
                    on_release: root.add_to_string("-","-")
                Button:
                    text: "X"
                    on_release: root.add_to_string("X","*")
                Button:
                    text: "/"
                    on_release: root.add_to_string("/","/")

            BoxLayout:
                id: opscol2
                orientation: 'vertical'

                Button:
                    text: "^"
                    on_release: root.add_to_string("^","**")
                Button:
                    text: chr(8730)
                    on_release: root.add_to_string(chr(8730)+"(","m.sqrt(")
                Button:
                    text: "("
                    on_release: root.add_to_string("(","(")
                Button:
                    text: ")"
                    on_release: root.add_to_string(")",")")